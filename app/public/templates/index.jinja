{% extends 'base.jinja' %}

{% block content %}

   <section class="section">
        <div class="container">
            <div class="columns is-flex is-mobile">
                <div class="column">
                    <div class="content">
                    {% for offer in offers %}
                        <div class="card">
                            <div class="card-content">
                                <p class="title is-4">{{ offer.job }}</p>
                                <div class="content">
                                    <p>
                                        {{ offer.description }}
                                    </p>
                                    <ul class="job-requirements">
                                        <li><strong>Compañía</strong>: {{ offer.company }}</li>
                                        <li><strong>Salario</strong>: {{ offer.salary }} {% if offer.salary %} €{% endif %} </li>
                                        <li><strong>Localización</strong>: {{ offer.localization }}</li>
                                        <li>
                                        <strong>Cualidades requeridas</strong>:
                                            <ul>
                                                <li>{{ offer.requirements }}</li>
                                            </ul>
                                        </li>
                                        <li>
                                        <strong>¿Qué ofrecemos?</strong>:
                                            <ul>
                                                <li>{{ offer.extra }}</li>
                                            </ul>
                                        </li>
                                        <li><strong>Contacto</strong>: {{ offer.contact }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
   </section>

{% endblock %}